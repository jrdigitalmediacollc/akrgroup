{
  "name": "akr-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@akr/web",
    "dev:api": "npm run dev --workspace=@akr/api",
    "build:web": "npm run build --workspace=@akr/web",
    "build:api": "npm run build --workspace=@akr/api",
    "start:api": "npm run start --workspace=@akr/api",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces"
  }
}
